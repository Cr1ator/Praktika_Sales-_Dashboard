<Window x:Class="praktika_test_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:uc="clr-namespace:praktika_test_2.UserControls"
        Title="ММЗ" Height="780" Width="1280" AllowsTransparency="True"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        Background="Transparent">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVisConv" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Border CornerRadius="25" Background="#F7F6F4" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!--Menu-->
            <Border Grid.RowSpan="3" CornerRadius="25">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#2247bf" Offset="0" />
                        <GradientStop Color="#0c2985" Offset="0.8" />
                    </LinearGradientBrush>
                </Border.Background>

                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <!--Logo-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 10">
                            <Grid>
                                <Border Background="#FFF" Width="35" Height="35" CornerRadius="50"/>
                                <Border Width="35" Height="35" BorderBrush="#FFF" BorderThickness="3" CornerRadius="50">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" Opacity="0.3"/>
                                    </Border.Effect>

                                    <!--Icon-->
                                    <fa:IconBlock Icon="M" Foreground="#2247bf" FontSize="15" Height="15"  Width="18" VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" Margin="0 0 2 0"/>
                                </Border>
                            </Grid>

                            <!--Title Text-->
                            <TextBlock Text="ММЗ" Foreground="#FFF" FontSize="30" Margin="10 0 0 3">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="10" Opacity="0.3" />
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>

                        <!--Menu Items-->
                        <TextBlock Text="Меню" Style="{StaticResource menuTitle}" />

                        <Button Click="No_Click" Style="{StaticResource menuButton}" Background="#F7F6F4" Foreground="#072485">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="Home" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Панель" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>

                        <Button Click="No_Click" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="ClipboardList" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Cписок лидеров" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>


                        <Button Click="No_Click" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="Paste" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Сводная таблица" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>

                        <Button Click="No_Click" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="UserCheck" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Администратор" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>

                        <Button Click="No_Click" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="BasketShopping" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Продажи" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>

                        <Button Click="No_Click" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="Clock" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Задачи" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>

                        <TextBlock Text="Помощь" Style="{StaticResource menuTitle}" />

                        <Button Click="No_Click" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="Message" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Сообщения" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>

                        <Button Click="No_Click" Style="{StaticResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <fa:IconBlock Icon="Gear" Margin="25 0 0 0" FontSize="18" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                                <TextBlock Text="Настройки" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>

                    <Button Click="CancelAgreement_Click" Style="{StaticResource menuButton}" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="15 0 15 20">
                        <StackPanel Orientation="Horizontal">
                            <fa:IconBlock Icon="RightFromBracket" FontSize="16" Margin="25 2 20 0" Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"/>
                            <TextBlock Text="Выйти" Height="17"/>
                        </StackPanel>
                    </Button>
                </DockPanel>

            </Border>
            
            <!--Search Section-->
            <Border Grid.Column="1" Grid.ColumnSpan="3" Margin="20 20 10 20" Style="{StaticResource whiteBorder}">
                <Grid>
                    <TextBlock Text="Справочник договоров" Grid.Row="1" FontSize="26" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0 0 0 0"
                           HorizontalAlignment="Left" Foreground="#121518"/>
                    
                    <!--Search Textbox-->
                    <Grid Margin="90 0 0 0" Width="400" HorizontalAlignment="Center">
                        <TextBlock Margin="15 0" VerticalAlignment="Center" Foreground="#868686" Panel.ZIndex="1"
                                       Text="Поиск..." IsHitTestVisible="False"
                                       Visibility="{Binding ElementName=textBoxSearch,Path=Text.IsEmpty, Converter={StaticResource boolToVisConv}}"/>

                        <TextBox x:Name="textBoxSearch" Style="{StaticResource searchTextBox}"/>

                        <fa:IconBlock Icon="Search" Width="24" Height="24" FontSize="24" Foreground="#2247bf" Margin="0 0 15 0"
                                          HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                    <!--Top Buttons-->
                    <Button Click="No_Click" Style="{StaticResource topButton}" Margin="0 0 20 0" Background="#dcdcdc" HorizontalAlignment="Right">
                        <fa:IconBlock Icon="Gear" VerticalAlignment="Center" FontSize="16"/>
                    </Button>

                    <Button Click="No_Click" Style="{StaticResource topButton}" Margin="0 0 55 0" HorizontalAlignment="Right">
                        <fa:IconBlock Icon="Bell" VerticalAlignment="Center" FontSize="16"/>
                    </Button>
                </Grid>
            </Border>

            <!--Main Section-->
            <Grid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="30 0 20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Page Title-->
                <TextBlock Text="Договоры" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 0 0 0"
                           HorizontalAlignment="Left" Foreground="#121518"/>

                <!--Add Button-->
                <Button Style="{StaticResource addButton}" Click="AddAgreement_Click">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Icon="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0"/>
                        <TextBlock Text="Добавить договор"/>
                    </StackPanel>
                </Button>

                <!--Seprator-->
                <Separator Height="1" Grid.Row="3" Background="#dae2ea" Margin="0 -1 0 10"/>

                <!--Top Buttons-->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
                    <Button Content="Договоры" Style="{StaticResource tabButton}" BorderBrush="#784ff2"/>
                    <!--<Button Content="Исполнители" Style="{StaticResource tabButton}" Width="114"/>-->
                    <Button Click="No_Click" Content="Архив" Style="{StaticResource tabButton}" Width="52"/>
                </StackPanel>

                <!--Counter Title-->
                <TextBlock Text="68 Договоров" Grid.Row="4" FontSize="18" FontWeight="SemiBold"
                           Foreground="#121518" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!--<TextBlock Text="Фильтер" Grid.Row="4" FontSize="13" FontWeight="SemiBold" Margin="0 0 215 0"
                           Foreground="#121518" HorizontalAlignment="Right" VerticalAlignment="Center"/>

                --><!--Filter Textbox--><!--
                <Grid Width="200" HorizontalAlignment="Right" Grid.Row="4">
                    <TextBlock Margin="15 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                               Panel.ZIndex="1" Text="Поиск договора"
                               Visibility="{Binding ElementName=txtFilter, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>

                    <TextBox x:Name="txtFilter" Style="{StaticResource textboxFilter}"/>
                </Grid>-->

                <!--Members Datagrid-->
                <DataGrid MouseDoubleClick="membersDataGrid_MouseDoubleClick" HorizontalScrollBarVisibility="Auto" Style="{DynamicResource DataGridStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}" Grid.Row="5" x:Name="membersDataGrid" SelectionChanged="membersDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn CanUserResize="False" Width="auto" ElementStyle="{StaticResource CheckBoxStyle1}">
                            <DataGridCheckBoxColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox Style="{DynamicResource CheckBoxStyle1}" />
                                </DataTemplate>
                            </DataGridCheckBoxColumn.HeaderTemplate>
                        </DataGridCheckBoxColumn>

                        <DataGridTextColumn Header="Код контрагента" IsReadOnly="True" CanUserResize="False" Width="auto" Binding="{Binding codeAgreement}"/>

                        <!--<DataGridTemplateColumn Header="Наименование" IsReadOnly="True" Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding codeAgreement}" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>-->

                        <DataGridTextColumn Header="N дог." IsReadOnly="True" Width="auto" Binding="{Binding numberAgreement}"/>
                        <DataGridTextColumn Header="Дата договора" IsReadOnly="True" Width="120" Binding="{Binding dateAgreement, StringFormat=dd-MM-yyyy}"/>
                        <DataGridTextColumn Header="Срок действия" IsReadOnly="True" Width="120" Binding="{Binding dateSrokAgreement, StringFormat=dd-MM-yyyy}"/>
                        <DataGridTextColumn Header="Дата завершения" IsReadOnly="True" Width="130" Binding="{Binding dateEndAgreement, StringFormat=dd-MM-yyyy}"/>
                        <DataGridTextColumn Header="Наименование контрагента" IsReadOnly="True" Width="auto" Binding="{Binding nameAgreement}"/>
                        <DataGridTextColumn Header="Страна" IsReadOnly="True" Width="auto" Binding="{Binding countryAgreement}"/>
                        <DataGridTextColumn Header="Область" IsReadOnly="True" Width="auto" Binding="{Binding areaAgreement}"/>
                        <DataGridTextColumn Header="Тип договора" IsReadOnly="True" Width="auto" Binding="{Binding typeAgreement}"/>
                        <DataGridTextColumn Header="Отношения" IsReadOnly="True" Width="auto" Binding="{Binding relationshipsAgreement}"/>
                        <DataGridTextColumn Header="Статус ММЗ" IsReadOnly="True" Width="auto" Binding="{Binding statusMMZAgreement}"/>
                        <DataGridTextColumn Header="Статус Контрагента" IsReadOnly="True" Width="auto" Binding="{Binding statusAgreement}"/>
                        <DataGridTextColumn Header="Сумма договора" IsReadOnly="True" Width="auto" Binding="{Binding sumAgreement}"/>
                        <DataGridTextColumn Header="Кол-во" IsReadOnly="True" Width="auto" Binding="{Binding countsAgreement}"/>
                        <DataGridTextColumn Header="Сумма трансп.расх" IsReadOnly="True" Width="auto" Binding="{Binding sumTransAgreement}"/>
                        <DataGridTextColumn Header="Полученная продукция" IsReadOnly="True" Width="auto" Binding="{Binding nameProduct}"/>
                        <DataGridTextColumn Header="Вид оплаты" IsReadOnly="True" Width="auto" Binding="{Binding typePayement}"/>
                        <DataGridTextColumn Header="Срок оплаты" IsReadOnly="True" Width="auto" Binding="{Binding dayDatePayement}"/>
                        <DataGridTextColumn Header="Дни" IsReadOnly="True" Width="auto" Binding="{Binding dayAgreement}"/>
                        <DataGridTextColumn Header="Срок откгрузки" IsReadOnly="True" Width="auto" Binding="{Binding dayDateOfShipment}"/>

                        <DataGridTemplateColumn Header="Операции" IsReadOnly="True" Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Style="{StaticResource gridEditButton}" Click="RedactAgreement_Click">
                                            <Button.Content>
                                                <fa:IconBlock Icon="Pencil" Width="16" Height="16" VerticalAlignment="Center"/>
                                            </Button.Content>
                                        </Button>
                                        <Button Style="{StaticResource gridRemovetButton}" Click="DeleteAgreement_Click" Margin="5 0 0 0">
                                            <Button.Content>
                                                <fa:IconBlock Icon="TrashCan" Width="16" Height="16" VerticalAlignment="Center"/>
                                            </Button.Content>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <!--Pagination Section-->
                <Border Grid.Row="6" HorizontalAlignment="Right" BorderBrush="#dee4ec" BorderThickness="1"
                        CornerRadius="5" Padding="5" Background="White" Margin="0 10 10 10">
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource pagingButton}">
                            <fa:IconBlock Icon="CaretLeft" VerticalAlignment="Center" Width="14" Height="12"/>
                        </Button>

                        <Rectangle Width="1" Fill="#dee4ec" Margin="3 7"/>

                        <Button Style="{StaticResource pagingButton}" Content="1"/>
                        <Button Style="{StaticResource pagingButton}" Content="2" Background="#2247bf" Foreground="#ffffff"/>
                        <Button Style="{StaticResource pagingButton}" Content="3"/>

                        <TextBlock Text="..." Foreground="#6c7682" VerticalAlignment="Center" FontSize="15" Margin="10 0"/>

                        <Button Style="{StaticResource pagingButton}" Content="7"/>
                        <Button Style="{StaticResource pagingButton}" Content="8"/>
                        <Button Style="{StaticResource pagingButton}" Content="9"/>

                        <Rectangle Width="1" Fill="#dee4ec" Margin="3 7"/>
                        <Button Style="{StaticResource pagingButton}">
                            <fa:IconBlock Icon="CaretRight" VerticalAlignment="Center" Width="14" Height="12"/>
                        </Button>

                    </StackPanel>
                </Border>

            </Grid>
